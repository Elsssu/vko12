<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ShowMonsterFragment"
    >

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/AttackMonsterButton"
            android:layout_width="150pt"
            android:layout_height="40pt"
            android:layout_marginTop="16dp"
            android:src="@drawable/attack"
            app:layout_constraintEnd_toEndOf="@+id/MonsterLifeText"
            app:layout_constraintHorizontal_bias="0.666"
            app:layout_constraintStart_toStartOf="@+id/MonsterLifeText"
            app:layout_constraintTop_toBottomOf="@+id/MonsterLifeText" />

        <TextView
            android:id="@+id/MonsterLifeText"
            android:layout_width="265dp"
            android:layout_height="27dp"
            android:layout_marginTop="16dp"
            android:text="el채m채 on helppoo, kun on joku josta pit채채 kii"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@+id/MonsterNameText"
            app:layout_constraintHorizontal_bias="0.481"
            app:layout_constraintStart_toStartOf="@+id/MonsterNameText"
            app:layout_constraintTop_toBottomOf="@+id/MonsterNameText" />

        <ImageView
            android:id="@+id/MonsterImage"
            android:layout_width="189dp"
            android:layout_height="177dp"
            android:layout_marginTop="120dp"
            android:src="@drawable/monster3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/MonsterNameText"
            android:layout_width="320dp"
            android:layout_height="93dp"
            android:layout_gravity="top|center"
            android:layout_marginTop="100dp"
            android:text="Monster"
            android:textAlignment="center"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="@+id/MonsterImage"
            app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintStart_toStartOf="@+id/MonsterImage"
            app:layout_constraintTop_toBottomOf="@+id/MonsterImage" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>